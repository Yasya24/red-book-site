                                span(style="color: #BA0000; font-family: Verdana; font-size: 16px; font-weight: bold;") *
                                input(type='email', name='email', value=formData.email, placeholder='Введите электронный адрес').form-control
                            .form-group
                                label Телефон
                                input(type='text', name='phone', value=formData.phone, placeholder='Введите ваш телефон').form-control
